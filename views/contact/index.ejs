<!DOCTYPE html>
<html>

<head>
  <meta charset="utf-8">
  <% include ../partials/head %>
    <% include ../partials/navbar %>
</head>

<body>
  <div class="container">
    <h1 style="text-align: center">Contact</h1>
    <div class="row">
        <% if(success) { %>
            <section class ="success">
              <h1> Success</h1>
            </section>
        <% } else { %>
          <section class ="errors">
            <ul>
            <% for(var iterator in  errors ) { %>
                <li> <%= errors[iterator].msg %></li>
            <% } %>

            </ul>
          </section>
        <% } %>
        <form class="form-horizontal" action="/contact/form" method="post">
          <div class="form-group" style="text-align:left">
            <label class ="control-label col-sm-2"for="name">Name:</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" id="name" name= "name" placeholder="Enter name:">
            </div>
          </div>
          <div class="form-group">
            <label class="control-label col-sm-2" for="email">Email:</label>
            <div class="col-sm-10">
              <input type="text" name="email" class="form-control" id="email" placeholder="Enter email:">
            </div>
          </div>
          <div class="form-group">
            <label for="comment" class="col-sm-offset-1">Comment:</label>
            <textarea class="form-control col-sm-offset-2" rows="5" id="comment" name="comment"></textarea>
          </div>
          <div class="form-group">
            <div class="col-sm-offset-1 col-sm-10">
              <button type="submit" class="btn btn-default">Submit</button>
            </div>
          </div>
        </form>
    </div>
  </div>

</body>

</html>
